{

  "name": "Hello World!",
  "description": "My first Chrome App.",
  "version": "0.1",

  "minimum_chrome_version": "40",

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tts" 
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/index.html"
  },

  "background": {
    "scripts": ["build/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": ["src/js/inject.js"]
    }
  ],


  "manifest_version": 2
}